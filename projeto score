#include <stdio.h>

int main (){

    printf("inicio do programa cadastro de pessoa\n");

    int i;
    char nome[50];
    int valores, idade;
    int score;

    for (i = 1; i <= 3; i++) {

        score = 0; // reinicia score a cada cadastro

        printf("\nCadastro %d\n", i);

        printf("Descreva o nome da pessoa: ");
        scanf("%s", nome);

        printf("Descreva a idade da pessoa: ");
        scanf("%d", &idade);

        if (idade < 19){
            printf("menor de idade\n");
            score += 100;
        }
        else if (idade >= 20 && idade < 30){
            printf("adulto tipo 1\n");
            score += 200;
        }
        else if (idade >= 30 && idade <= 40){
            printf("adulto tipo 2\n");
            score += 300;
        }
        else if (idade > 40 && idade <= 50){
            printf("adulto tipo 3\n");
            score += 400;
        }
        else {
            printf("idoso\n");
            score += 500;
        }

        printf("Descreva o valor da renda do paciente: ");
        scanf("%d", &valores);

        if (valores < 1000){
            printf("Valores inadequados\n");
            score += 100;
        }
        else if (valores <= 2500){
            printf("Valor na media\n");
            score += 200;
        }
        else if (valores <= 6000){
            printf("Valor aceitavel\n");
            score += 300;
        }
        else {
            printf("Valores otimos\n");
            score += 400;
        }

        printf("\nClassificacao final do score:\n");

        switch (score){
            case 200:
                printf("Score muito baixo\n");
                break;
            case 300:
                printf("Score baixo\n");
                break;
            case 400:
                printf("Score regular\n");
                break;
            case 500:
                printf("Score aceitavel\n");
                break;
            case 600:
                printf("Score bom\n");
                break;
            case 700:
                printf("Score muito bom\n");
                break;
            case 800:
                printf("Score excelente\n");
                break;
            default:
                printf("Score alto ou nao classificado\n");
        }

        printf("\nResumo do cadastro %d:\n", i);
        printf("Nome: %s\n", nome);
        printf("Idade: %d\n", idade);
        printf("Renda: %d\n", valores);
        printf("Score final: %d\n", score);
    }

    return 0;
}
